+pub struct DeterministicPRNG {
+    rng: ChaCha20Rng,
+}
+
+impl DeterministicPRNG {
+    pub fn from_nonce(nonce: Vec<u8>) -> Self {
+        let rng = ChaCha20Rng::from_seed(Seeder::from(nonce).make_seed());
+        DeterministicPRNG { rng }
+    }
+}
+
